@model IEnumerable<ProiectDAW.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Review", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Game.GameName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewScore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewInfo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Game.GameName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewScore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewInfo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
